<%- include('../partials/header'); %>

  <div class="post postContainer border-4 container mt-4 pt-2 pb-2">
    <div class="flex-row d-flex justify-content-between">
    <div class="d-inline-block">
      <img src="<%= postUser.avatar ? postUser.avatar : 'https://i.imgur.com/JqEj7pe.png' %>" class="post rounded-circle" alt="" style="height:50px">
    </div>

    <div class="d-inline-block">
      <label><%= postUser.name %></label>
    </div>

    <div class="d-inline-block d-flex">
      <label><%= post.createdAt.toLocaleString() %></label>
    </div>

      <div>
        <% if(currentUserId && post.user.toString() === currentUserId.toString() ) { %>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                      ...
                  </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><a class="dropdown-item" href="/posts/<%= post._id %>/edit">Edit</a></li>
              <form class="dropdown-item" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Post</button>
              </form>
            </ul>
          </div>
        <%};%>
      </div>
    </div>

      <div class="mt-2">
        <a href="/posts/<%= post._id %>">
          <h3><%=post.title%></h3>
        </a>
      </div>



    <div class="row m-2 post">
        <p class="post-contents"><%= post.contents %></p>
    </div>

    <div class="d-flex flex-row justify-content-between">
      
    <a href="/posts/<%=post._id%>"><%= post.comments.length ? `See ${post.comments.length} comments...` : "Be the first to comment"%></a>


    <form action="/posts/all/<%=post._id%>/likes" method="POST"><button type="submit" name="like"><%= post.likes.length ? `${post.likes.length} interested` : "I'm interested"%></button></form>


  </div>

  <%post.comments.forEach(function(comment){ %>
    <% commentUser = usersFromComments[comment.user.toString()]; %>
    <div class="d-flex flex-row justify-content-between">

      <div class="d-inline-block">
        <img src="<%= commentUser.avatar ? postUser.avatar : 'https://i.imgur.com/JqEj7pe.png' %>" class="post rounded-circle" alt="" style="height:50px">
      </div>
  
      <div class="d-inline-block">
        <label><%= commentUser.name %></label>
        <% console.log(commentUser, currentUserId) %> 
      </div>

      <div class="d-inline-block">
        <label>
          <%=comment.createdAt.toLocaleString()%></label>
        </label>
      </div>

      div>
      <% if (currentUserId.toString() && commentUser._id.toString() === currentUserId.toString()) { %>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                      ...
                  </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><a href="/posts/<%= post._id %>/<%= comment._id %>">Edit Comment</a></li>
              <form class="dropdown-item" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Post</button>
              </form>
            </ul>
          </div>
          <%};%>
      </div>

    </div>
    
    <div class="d-flex flex-row">
  
      <div class="d-inline-block d-flex">
        <% if (editCommentId && commentUser._id.toString() === editCommentId) { %>
          <form action="/posts/<%= post._id%>/<%=comment._id.toString() %>?_method=PUT" method="POST">
            <textarea name="editedComment"><%= comment.contents %></textarea>
            <button type="submit">Edit Comment</button>
          </form>
        <% } else { %>
        <div><%= comment.contents %></div>
          <% if (currentUserId.toString() && commentUser._id.toString() === currentUserId.toString()) { %>
          <a href="/posts/<%= post._id %>/<%= comment._id %>">Edit Comment</a>
          <% }; %>
        <% }; %>
      </div>

    </div>
      
      <form action="/posts/<%= post._id %>/comments?_method=DELETE" method="POST">
        <input style="display: none" name="commentId" value="<%= comment._id %>">
        <button type="submit">X</button>
      </form>
      <% if(currentUserId){ %> 
      <form action="/posts/<%= post._id%>/<%=comment._id %>/likes" method="POST"><button type="submit" name="like">like</button></form>
      <% }; %>
      <h3>Likes:<%= comment.likes.length || 0; %></h3>
    </form>
     </section>
    <% }); %>
    <% if ( currentUserId){ %>
    <form method="POST" action="/posts/<%= post._id %>/comments/">
        <div>add comment</div>
        <textarea name="contents"></textarea>
        <button type="submit"> Add comment</button>
    </form>
    <% }; %>

  </div>

  
<%- include('../partials/footer'); %>